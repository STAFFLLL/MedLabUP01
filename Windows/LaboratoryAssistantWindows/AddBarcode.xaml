<Window x:Class="MedLab.Windows.LaboratoryAssistantWindows.AddBarcode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedLab.Windows.LaboratoryAssistantWindows"
        mc:Ignorable="d"
        Title="Создание кода" Height="230" Width="300" ResizeMode="NoResize">
    <Grid>
        <Rectangle/>
        <StackPanel Orientation="Vertical" Margin="15">
            <TextBlock Text="Введите код пробирки" Style="{StaticResource headerText}" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 5"/>
            <TextBox x:Name="TextNewBarcode" Margin="0 0 0 5" KeyDown="TextNewBarcode_KeyDown" ToolTip="Нажмите кливищу Enter для автоматического вставления кода"/>
            <Button x:Name="SaveBarcodeAndGenBarcode" Content="Сохранить и создать pdf штрихкода" HorizontalAlignment="Center" Click="SaveBarcodeAndGenBarcode_Click"/>
            <Button x:Name="SaveBarcode" Content="Сохранить" HorizontalAlignment="Center" Click="SaveBarcode_Click" Margin="0 5 0 0"/>
            
        </StackPanel>
    </Grid>
</Window>
