<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="messageTextB">
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value = "#FF8199E5"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="16px"/>
    </Style>

    <Style x:Key="GridFromTabItem" TargetType="Grid">
        <Setter Property="Background" Value="#FF8199E5"/>
    </Style>
    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>
    <Style x:Key="headerText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 15 0 0"/>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="CanUserAddRows" Value="False"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Height" Value="30px"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="2px"/>
        <Setter Property="SpellCheck.IsEnabled" Value="True"/>
        <Setter Property="Language" Value="ru-ru"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Height" Value="30px"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="2px"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Height" Value="30px"/>
        <Setter Property="Background" Value = "#FFC1E6FF"/>
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="Foreground" Value="Green"/>
        <Setter Property="BorderBrush" Value="#FF9B9B9B"/>
        <Setter Property="BorderThickness" Value="2px"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Rectangle">
        <Setter Property="Fill" Value="#FF95C89C"/>
        <Setter Property="RadiusX" Value="15"/>
        <Setter Property="RadiusY" Value="15"/>
    </Style>

    <Style TargetType="TextBox" x:Key="CapchStyle">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Chiller"/>
        <Setter Property="FontSize" Value="38px"/>
        <Setter Property="Foreground" Value="GhostWhite"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Text" Value="CAPCH"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="Width" Value="50px"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>

</ResourceDictionary>